<Project Sdk="Microsoft.NET.Sdk">

		<PropertyGroup>
				<TargetFramework>net8.0</TargetFramework>
				<Version>8.0.0</Version>
				<Nullable>enable</Nullable>
				<Authors>Alireza Oroumand</Authors>
				<ImplicitUsings>enable</ImplicitUsings>
				<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
				<RepositoryUrl>https://github.com/oroumand/Zamin</RepositoryUrl>
				<PackageIcon>icon.png</PackageIcon>
		</PropertyGroup>

		<ItemGroup>
				<None Include="..\..\..\..\icon.png" Pack="true" PackagePath="" />
		</ItemGroup>

		<ItemGroup>
				<PackageReference Include="EPPlus" Version="7.0.6" />
				<PackageReference Include="Zamin.Extensions.Serializers.Abstractions" Version="8.0.0" />
				<PackageReference Include="Zamin.Extensions.Translations.Abstractions" Version="8.0.0" />
				<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
				<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
		</ItemGroup>

</Project>